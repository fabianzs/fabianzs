@model BankOfSimba.Models.BankAccount
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Getting Started: Serving Web Content</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <table>
        <tr>
            <th>Index</th>
            <th>Name</th>
            <th>Balance</th>
            <th>Animal Type</th>
            <th>King</th>
            <th>Bad/Good</th>
        </tr>
        @foreach (BankOfSimba.Models.BankAccount item in ViewBag.BankAccounts)
        {
            <tr class="@(item.IsKing ? "king" : "")">
                <td class="index">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Balance.ToString("0.00") Zebra</td>
                <td>@item.AnimalType</td>
                <td class="index"> @(item.IsKing ? "King" : " ")</td>
                <td class="index">@(item.IsGood ? "Good guy" : "Bad one")</td>
                <td>ViewBag.NewAccount.Name</td>
            </tr>
        }
    </table>
    <form asp-action="Add" asp-controller="Account" method="post">
        <input type="text" asp-for="@Model.Name" required />
        <input type="text" asp-for="@Model.Balance" required />
        <input type="text" asp-for="@Model.AnimalType" required />
        <label>King:</label>
        <input type="checkbox" asp-for="@Model.IsKing" required />
        <label>Good:</label>
        <input type="radio" name="good" value="true" asp-for="@Model.IsGood" required />
        <label>Bad:</label>
        <input type="radio" name="good" value="false" asp-for="@Model.IsGood" required />
        <input type="submit" value="Submit">
    </form>
</body>
</html>

