@model BankOfSimba.ViewModels.AccountListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Getting Started: Serving Web Content</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <table>
        <tr>
            <th>Index</th>
            <th>Name</th>
            <th>Balance</th>
            <th>Animal Type</th>
            <th>King</th>
            <th>Bad/Good</th>
        </tr>
        @foreach (var BankAccount in Model.BankAccounts)
        {
            <tr class="@(BankAccount.IsKing ? "king" : "")">
                <td class="index">@BankAccount.Id</td>
                <td>@BankAccount.Name</td>
                <td>@BankAccount.Balance.ToString("0.00") Zebra</td>
                <td>@BankAccount.AnimalType</td>
                <td class="index"> @(BankAccount.IsKing ? "King" : " ")</td>
                <td class="index">@(BankAccount.IsGood ? "Good guy" : "Bad one")</td>
            </tr>
        }
    </table>
    <form asp-action="Add" asp-controller="Account" method="post">
        <input type="text" asp-for="NewBankAccount.Name" required />
        <input type="text" asp-for="NewBankAccount.Balance" required />
        <input type="text" asp-for="NewBankAccount.AnimalType" required />
        <label>King:</label>
        <input type="checkbox" asp-for="NewBankAccount.IsKing" />
        <label>Good:</label>
        <input type="radio" name="good" value="true" asp-for="NewBankAccount.IsGood" checked="checked" required />
        <label>Bad:</label>
        <input type="radio" name="good" value="false" asp-for="NewBankAccount.IsGood" required />
        <input type="submit" value="Submit">
    </form>
</body>
</html>
